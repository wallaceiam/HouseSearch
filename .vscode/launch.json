  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ofsted",
      "cwd": "${workspaceFolder}/tools/ofsted",
      "outputCapture": "std",
      "sourceMaps": true,
      "preLaunchTask": "ofsted:yarn:compile",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "./dist/index.js"
    }
  ]
}